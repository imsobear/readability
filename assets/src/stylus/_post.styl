/*
 * 单篇文章的样式
 */

.one-post
	
	.post-title
		float left
	.post-meta
		margin 15px  0
		float right
	.post-hr
		margin 0 0 30px 0

	.share
		margin-bottom 10px
		h4
			display inline-block
			margin-right 5px
		[class^=icon]
			font-size 28px
			margin-right 15px
	.over-hr
		margin-top 50px
		border-bottom-width 4px

	.post-content img
		max-width 100%